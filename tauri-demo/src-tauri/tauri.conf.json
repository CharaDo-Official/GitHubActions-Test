{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "tauri-demo",
  "version": "0.1.1",
  "identifier": "com.charado.frontdemo",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ./front",
    "beforeBuildCommand": "node -e \"try{require('fs').rmSync('src-tauri/target',{recursive:true,force:true})}catch(e){}\" && npm run build --prefix ./front",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../front/dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-demo",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [ "msi" ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
